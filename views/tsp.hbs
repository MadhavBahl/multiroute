<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>GitHub Profile Analyzer</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>

    <div class="header">
        <div class="container">
            <div class="row" style="padding-top: 28px; padding-bottom: 50px;">
                {{!-- <div class="col s12 m2 center">
                    <a href="/"><img src="img/logo.png" style="margin-bottom: 10px;" class="responsive-img" alt=""></a>
                </div> --}}

                <div class="col s12 m12 center-text">
                    <a style="color: white;" href="/"><h2 style="text-align: center;">MultiRoute</h2></a>
                </div>
            </div>
        </div>
    </div>

    <div class="mainCard" id="mainCard1">
        <div class="container mainCardContainer">
            <div class="row">
                <div class="col s12 m12">
                    <div class="card">
                        <div class="card-content innerCard hoverable">
                           

                            <div class="row">
                                <div class="col s12 m12 center" style="margin-top: 5vh;">
                                    
                                    <div class="input-field col s12 m6 offset-m3">
                                        <form action="/solution" method="POST">
                                            Number Of Nodes: <input placeholder="Nodes" id="numNodes" name="numNodes" type="text" class="validate">
                                            <br>
                                            <!-- <label class="center" style="text-align: center; margin-left: 20px;" for="first_name">First Name</label> -->
                                            Enter Adjacency Matrix: <textarea placeholder="Adjacency Matrix" name="matrix" id="matrix" style="min-height: 150px;" type="text" class="validate"></textarea>
                                            <br>
<br>
                                            <button class="btn waves-effect waves-dark grey darken-3" id="searchBtn">Search!</button>
                                            <br>
                                        </form>

                                    </div>

                                    <div class="col s12 m12">
                                        <div id="result-container" class="container center">
                                            <div  id="resultRow" class="row">
                                                
                                            </div>

                                            <div  id="mainResultRow" class="row">
                                                
                                            </div>
    
                                        </div>
                                    </div>

                                    

                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            
        </div>
    </div>

    <div class="footer">
        <div class="container">
            
        </div>
    </div>

    <!-- Uncompressed jQuery CDN -->
    <script
        src="https://code.jquery.com/jquery-2.2.4.min.js"
